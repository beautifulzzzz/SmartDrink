<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/iv_00"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@drawable/welcome"
        />
    
    <TextView
        android:id="@+id/tv_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_00"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="登陆界面" />
    
    <EditText
        android:id="@+id/et_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_00"
        android:hint="请输IP" />

    <EditText
        android:id="@+id/et_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_01"
        android:layout_alignRight="@id/et_01"
        android:layout_below="@id/et_01"
        android:layout_marginBottom="30dp"
        android:hint="请输入端口号"
        android:inputType="textPassword" />
    
    <Button 
        android:id="@+id/bt_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_02"
        android:layout_alignParentRight="true"
        android:text="取消"/>
    
    <Button 
        android:id="@+id/bt_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bt_Cancel"
        android:layout_alignBaseline="@id/bt_Cancel"
        android:text="确定"/>
    
</RelativeLayout>
